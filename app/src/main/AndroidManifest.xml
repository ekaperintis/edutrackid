<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ekaperintis.guru">

    <uses-sdk android:minSdkVersion="14" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:largeHeap="true"
        android:hardwareAccelerated="false"
        android:allowBackup="true"
        android:icon="@drawable/learning"
        android:label="@string/app_name"
        android:roundIcon="@drawable/learning"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Loading"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Login"
            android:windowSoftInputMode="stateHidden"/>

        <activity
            android:name=".Register"
            android:label="@string/room_learning"></activity>

        <activity
            android:name=".ListTeacherLearning"
            android:label="@string/lbl_room_learning"></activity>

        <activity
            android:name=".Dashboard"
            android:label="@string/room_learning"></activity>

        <activity
            android:name=".AddTeacherLearning"
            android:label="@string/add_information"></activity>

        <activity
            android:name=".Teacher_Learning_Detail"
            android:label="@string/detail_learning"></activity>

        <activity
            android:name=".Upload_Images"
            android:label="@string/upload"></activity>


        <activity
            android:name=".Share_Information"
            android:label="@string/lbl_room_information"></activity>

        <activity
            android:name=".AboutMe"
            android:label="@string/aboutme"></activity>
    </application>

</manifest>